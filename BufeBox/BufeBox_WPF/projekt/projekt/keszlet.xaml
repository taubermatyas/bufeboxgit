                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label x:Name="termek" Content="Termék felvétel/módosítás:" HorizontalAlignment="Left" Margin="847,81,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" FontFamily="Verdana" FontSize="30" Height="44" Width="480"/>
        <Border CornerRadius="10" Background="#2d2d3d" Padding="10" Margin="947,161,118.4,563" Height="44">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            <Grid>
                <Label x:Name="placehold1" Content="Termék neve:" Background="Transparent" IsHitTestVisible="False" VerticalAlignment="Center"
                    Foreground="White" Height="30" Margin="0,0,0,-6" Opacity="0.5"/>
                <TextBox x:Name="tnev" Foreground="White" Background="Transparent"
                    FontSize="16" BorderThickness="0" Padding="5,5,5,5"
                    CaretBrush="White"
                    Margin="0,-5,0,-3" TextChanged="tnev_TextChanged"/>

            </Grid>
        </Border>
        <Border CornerRadius="10" Background="#2d2d3d" Padding="10" Margin="947,236,118.4,488" Height="44">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            <Grid>
                <Label x:Name="placehold2" Content="Darabszám:" Background="Transparent" IsHitTestVisible="False" VerticalAlignment="Center"
                    Foreground="White" Height="30" Margin="0,0,0,-6" Opacity="0.5"/>
                <TextBox x:Name="dbszam" Foreground="White" Background="Transparent"
                    FontSize="16" BorderThickness="0" Padding="5,5,5,5"
                    CaretBrush="White"
                    Margin="0,-5,0,-3" TextChanged="dbszam_TextChanged"/>

            </Grid>
        </Border>
        <Border CornerRadius="10" Background="#2d2d3d" Padding="10" Margin="947,401,118,323" Height="44">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            <Grid>
                <Label x:Name="placehold3" Content="Ár:" Background="Transparent" IsHitTestVisible="False" VerticalAlignment="Center"
                    Foreground="White" Height="30" Margin="0,0,0,-6" Opacity="0.5"/>
                <TextBox x:Name="ar" Foreground="White" Background="Transparent"
                    FontSize="16" BorderThickness="0" Padding="5,5,5,5"
                    CaretBrush="White"
                    Margin="0,-5,0,-3" TextChanged="ar_TextChanged"/>

            </Grid>
        </Border>
        <ComboBox x:Name="kiszerelesek" HorizontalAlignment="Left" Margin="947,340,0,0" VerticalAlignment="Top" Width="301" Height="35"
          Background="#2d2d3d" Foreground="White" BorderBrush="#65658d" BorderThickness="1" FontSize="16" FontFamily="Verdana" FontWeight="Bold"
          Padding="5" SelectionChanged="kiszerelesek_SelectionChanged" Cursor="Hand">
            <ComboBox.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.8" Color="#00BFFF" Direction="0"/>
            </ComboBox.Effect>

            <!-- ComboBoxItem stílus -->
            <ComboBox.Resources>
                <Style TargetType="{x:Type ComboBoxItem}">
                    <Setter Property="Background" Value="#2d2d3d"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontFamily" Value="Verdana"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="BorderBrush" Value="#65658d"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Hover trigger -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#50506d"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#7a7a9d"/>
                                    </Trigger>
                                    <!-- Kiválasztott elem -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#2d2d3d"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#65658d"/>
                                    </Trigger>
                                    <!-- Kombinált trigger: kiválasztott és hover -->
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True"/>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="Bd" Property="Background" Value="#50506d"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#7a7a9d"/>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ComboBox.Resources>

            <!-- ComboBox Template -->
            <ComboBox.Template>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Kiválasztott elem megjelenítése -->
                            <ContentPresenter x:Name="ContentPresenter" Grid.Row="0"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                      Margin="10,0,40,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      TextElement.Foreground="White"
                                      TextElement.FontFamily="Verdana"
                                      TextElement.FontWeight="Bold"/>

                            <!-- ToggleButton a legördüléshez -->
                            <ToggleButton x:Name="ToggleButton" Grid.Row="0" Background="Transparent" BorderThickness="0"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Focusable="False" Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border Background="Transparent">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <!-- Popup (legördülő lista) -->
                            <Popup x:Name="PART_Popup" Grid.Row="0"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           Placement="Bottom" Focusable="False" AllowsTransparency="True" PopupAnimation="Fade">
                                <Border Background="#2d2d3d" BorderBrush="#65658d" BorderThickness="1" CornerRadius="8" Padding="5" MaxHeight="300">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>

                            <!-- Nyíl -->
                            <ToggleButton Grid.Row="0" x:Name="PART_Arrow" Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  HorizontalAlignment="Right" BorderBrush="Transparent" Background="Transparent"
                                  Margin="0,0,10,0" Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Grid>
                                            <Rectangle Fill="Transparent"/>
                                            <Path x:Name="Arrow" Fill="White" Data="M 0 0 L 6 6 L 12 0 Z" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover trigger a ComboBox-ra -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#3a3a4d"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#7a7a9d"/>
                        </Trigger>
                        <!-- Kiválasztott elem trigger -->
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#3a3a4d"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#7a7a9d"/>
                        </Trigger>
                        <!-- Fókusz trigger -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#8a8aad"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ComboBox.Template>
        </ComboBox>





